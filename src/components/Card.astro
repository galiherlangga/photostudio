---
export interface Props {
	number: string;
	title: string;
}

const { number, title } = Astro.props;
---

<div class="bg-slate-300 text-gray-800 py-5 px-5 mx-16 rounded-lg shadow-lg">
	<div class="bg-slate-800 w-60 h-60 rounded-lg">
		<span class="text-gray-400 flex justify-center translate-y-20"><slot/></span>
	</div>
	<h3 class="text-2xl mt-3">{number}</h3>
	<p>{title}</p>
</div>
